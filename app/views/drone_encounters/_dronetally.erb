
<%= content_tag :div, class:'fixed top-0 left-0 w-full bg-amber-500' do %>
  <%= turbo_frame_tag 'total_drones' do %>
    <%= render partial: 'drone_encounters/total_kills', locals: { total_kills: total_kills } %>
  <% end %>
<% end %>

<%= turbo_frame_tag 'encounters', class: 'encounter-container min-w-full' do %>

  <%= content_tag :div, class: 'pt-8 min-w-full' do %>
    <table class="min-w-full text-center">
      <thead class='bg-amber-300' >
        <tr>
          <%= content_tag :th, 'Team Name', class: 'px-2 py-4 md:px-6 md:text-2xl' %>
          <%= content_tag :th, 'Kills', class: 'px-2 py-4 md:px-6 md:text-2xl' %>
          <%= content_tag :th, 'Round', class: 'px-2 py-4 md:px-6 md:text-2xl' %>
          <%= content_tag :th, 'Players', class: 'px-2 py-4 md:px-6 md:text-2xl' %>
        </tr>
      </thead>
      <tbody>
        <% drone_encounters.each do |de| %>
          <%= render partial: 'drone_encounters/encounter', locals: { encounter: de } %>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
