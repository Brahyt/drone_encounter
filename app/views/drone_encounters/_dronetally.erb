
<%= content_tag :div, class: 'box', id: 'dronetally' do %>
  <%= turbo_frame_tag 'total_drones' do %>
    <%= render partial: 'drone_encounters/total_kills', locals: { total_kills: total_kills } %>
  <% end %>
<% end %>

<%= content_tag :div, content_tag(:h2, 'COMPLETED GAMES'), {style: 'text-align:center;'} %>

<%= turbo_frame_tag 'encounters', class: 'encounter-container' do %>

  <%= content_tag :div, class: 'encounter-list' do %>
    <% drone_encounters.each do |de| %>
      <%= render partial: 'drone_encounters/encounter', locals: { encounter: de } %>
    <% end %>
  <% end %>
<% end %>
