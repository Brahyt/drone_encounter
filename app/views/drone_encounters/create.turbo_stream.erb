<%= turbo_stream.prepend 'encounters' do %>
  <%= render partial: 'encounter', locals: { encounter: @drone_encounter } %>
<% end %>

<%= turbo_stream.update 'drone_counter' do %>
  <%= link_to "Record Drones", new_drone_encounter_path %>
<% end %>

<%= turbo_stream.update 'total_drones' do %>
  <%= render partial: 'total_kills', locals: { total_kills: @total_drones_killed += @drone_encounter.drone_kills} %>
<% end %>
