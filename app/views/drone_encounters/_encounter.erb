<%= content_tag :div, class: "encounter-box status_#{encounter.current_status}" do %>
  <%= content_tag :div, "Team Name: #{encounter.team.name}" %>
  <%= content_tag :div, "Drones Killed: #{encounter.drone_kills}" %>
  <%= content_tag :div, "Round Number: #{encounter.round_number}" %>
  <%= content_tag :div, "#{encounter.team.players.count} Players" %>
  <%= content_tag :div, class: 'players-box' do %>
    <% encounter.team.players.each do |player| %>
      <%= "#{player&.hero&.name} #{player&.aspect&.name}" %>
    <% end %>
  <% end %>
<% end %>
