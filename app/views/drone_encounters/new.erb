<turbo-frame id='drone_counter' >
  <%= content_tag :div, class: 'fixed bottom-0 left-0 w-full py-5 flex items-center'  do %>
    <%= content_tag :div, class: 'mx-auto' do %>
      <%= content_tag :h2, "Current Kills" %>
      <%= content_tag :div, class: 'flex items-center' do %>
        <%= content_tag :button, '▼', data: {action: 'click->dronecounter#down_drone'} %>
        <%= content_tag :h1, @drone_count, class: 'kill-counter m-0', 'data-dronecounter-target': 'droneCount' %>
        <%= content_tag :button, '▲', data: {action: 'click->dronecounter#up_drone'} %>
      <% end %>
    <% end %>
    <%= form_with model: @drone_encounter do |encounter_form| %>
      <%= encounter_form.hidden_field :drone_kills, 'data-dronecounter-target': 'droneCountField' %>
      <%= content_tag :div do %>
        <%= encounter_form.label :current_status, 'Current Game Status: ' %>
        <%= encounter_form.select :current_status, %w[in_progress win lose] %>
      <% end %>
      <%= content_tag :div, class: 'counter-container m-0' do %>
        <%= encounter_form.submit 'NEXT ROUND' %>
      <% end %>
    <% end %>
  <% end %>
</turbo-frame>
