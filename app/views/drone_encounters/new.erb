<%= turbo_frame_tag 'drone_counter' do %>
  <%= content_tag :div, class: 'box' do %>
    <%= content_tag :h2, "Current Kills", class: 'text-center m-0' %>
  <% end %>
  <%= content_tag :div, class: 'counter-container m-0' do %>
    <%= content_tag :button, '▼', class: 'count-down m-0', data: {action: 'click->dronecounter#down'} %>
    <%= content_tag :h1, 0, class: 'kill-counter m-0', 'data-dronecounter-target': 'count' %>
    <%= content_tag :button, '▲', class: 'count-up m-0', data: {action: 'click->dronecounter#up'} %>
  <% end %>
  <%= link_to "Record Details", form_drone_encounters_path, data: {action: 'click->dronecounter#next'} %>
<% end %>
