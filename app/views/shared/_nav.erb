<%= content_tag :div, class: 'fixed bottom-0 left-0 w-full py-5 flex items-center bg-gunmetal boarder-t-1' do %>
  <%= link_to "Record Drones Kills", new_drone_encounter_path, class: 'p-2 mx-auto md:text-3xl text-red-600' if session[:team_identifier] && @team&.players.present? %>
  <%= link_to "Assemble!", new_team_path, class: 'p-2 mx-auto text-4xl text-red-600' unless session[:team_identifier] %>
  <%= link_to "Add Players", new_player_path, class: 'p-2 mx-auto md:text-3xl text-red-600' if (session[:team_identifier] && @team&.players.blank?) %>
  <%= link_to "Reset Team", reset_drone_encounters_path, class: 'p-2 mx-auto md:text-3xl text-red-600' if session[:team_identifier] %>
<% end %>

