<%= turbo_frame_tag 'drone_counter' do %>
  <%= form_with model: @team do |form| %>
    <%= content_tag :div, class: 'fixed bottom-0 left-0 w-full py-5 flex items-center' do %>
      <%= form.label :name, 'Team Name' %>
      <%= form.text_field :name %>
    <% end %>

    <%= content_tag :div do %>
      <%= form.submit %>
    <% end %>
  <% end %>
<% end %>
