<%= turbo_frame_tag 'drone_counter' do %>
  <%= form_with model: @team do |form| %>
    <%= content_tag :div, class: 'fixed bottom-0 left-0 w-full py-5 flex items-center border-t-2 border-red-600 bg-gunmetal' do %>
      <%= content_tag :div, class: 'mx-auto flex items-center flex-col' do %>
        <%= form.text_field :name, placeholder: 'Team Name' %>
        <%= form.submit 'Create Team', class: 'my-3 p-2 text-xl text-red-600' %>
      <% end %>
    <% end %>

  <% end %>
<% end %>
