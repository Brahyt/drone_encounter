<%= turbo_frame_tag 'drone_counter' do %>
  <%= form_with url: players_path, model: @team, method: :new do |form| %>
    <%= form.fields_for :players do |player_form| %>
      <%= content_tag :div do %>
        <%= player_form.label :hero_id, 'Hero' %>
        <%= player_form.select :hero_id, @heroes %>
      <% end %>
      <%= content_tag :div do %>
        <%= player_form.label :aspect_id, 'aspect' %>
        <%= player_form.select :aspect_id, @aspects %>
      <% end %>
    <% end %>
      <%= content_tag :div do %>
        <%= form.submit %>
      <% end %>
  <% end %>
<% end %>
